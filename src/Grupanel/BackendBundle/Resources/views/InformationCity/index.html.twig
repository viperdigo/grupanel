{% extends '::content.html.twig' %}

{% block pageCss %}
    <style>
        .meet-our-team h3 {
            text-align: center;
            margin-bottom: 0;
            padding: 10px;
            background: #f9f9f9;
        }

        .meet-our-team small {
            display: block;
            font-size: 12px;
            color: #999;
            margin-top: 5px;
        }

        .meet-our-team .team-info {
            text-align: center;
            padding: 10px;
            overflow: hidden;
            background: #f5f5f5;
        }
    </style>
{% endblock %}

{% block contentTitle %}{{ "Information City"|trans }}{% endblock %}

{% block contentBody %}

    <br>
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="{{ path('home') }}">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="{{ path('information_city') }}">Informações do Município</a>
        </li>
    </ul>

    <div class="row thumbnails">
        <div class="col-md-2">
            <div class="meet-our-team">
                <h3>Fundação</h3>
                <div class="team-info">
                    <p>08/12/1560</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="meet-our-team">
                <h3>Área</h3>
                <div class="team-info">
                    <p>319,19 km²</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="meet-our-team">
                <h3>Prefeito</h3>
                <div class="team-info">
                    <p>Gustavo Henric Costa</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="meet-our-team">
                <h3>Populalação</h3>
                <div class="team-info">
                    <p>1.365.899 habitantes (IBGE/2018)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="meet-our-team">
                <h3>PIB</h3>
                <div class="team-info">
                    <p>R$ 49.392.842 (IBGE/2013)</p>
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="portlet light">
        <div>
            <h4 class="profile-desc-title">Municípios Limítrofes</h4>
            <span class="profile-desc-text">Mairiporã, Nazaré Paulista, Santa Isabel, Arujá, Itaquaquecetuba, São Paulo</span>
            <br>
            <br>
            <h4 class="profile-desc-title">Curiosidades</h4>
            <span class="profile-desc-text">
                •	Guarulhos é a 4° maior cidade de São Paulo em riqueza e 2° em população.
                •	O aeroporto de Guarulhos iniciou sua operação em 1985, e é atualmente o maior aeroporto do Brasil e o mais movimentado da América Latina, em número de passageiros transportados.
                •	A cidade é cortada por cinco rodovias muito importantes, e é considerada estratégica para logística e transporte, contando com diversos centros de distribuição
            </span>
        </div>
    </div>

    <div class="portlet box blue tabbable">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-map-marker"></i> Mapas
            </div>
        </div>
        <div class="portlet-body">
            <div class=" portlet-tabs">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#portlet_tab1" data-toggle="tab" aria-expanded="false">Aéreo</a>
                    </li>
                    <li class="">
                        <a href="#portlet_tab2" data-toggle="tab"
                           aria-expanded="false">Distrito</a>
                    </li>
                    <li class="">
                        <a href="#portlet_tab3" data-toggle="tab" aria-expanded="false">Setor
                            Abastecimento</a>
                    </li>
                    <li class="">
                        <a href="#portlet_tab4" data-toggle="tab" aria-expanded="false">Sub Bacia
                            Esgotamento</a>
                    </li>
                    <li class="">
                        <a href="#portlet_tab5" data-toggle="tab" aria-expanded="false">UGR</a>
                    </li>
                    <li class="">
                        <a href="#portlet_tab6" data-toggle="tab" aria-expanded="false">Setores
                            Beneficiados</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="portlet_tab1"></div>
                    <div class="tab-pane" id="portlet_tab2"></div>
                    <div class="tab-pane" id="portlet_tab3"></div>
                    <div class="tab-pane" id="portlet_tab4"></div>
                    <div class="tab-pane" id="portlet_tab5"></div>
                    <div class="tab-pane" id="portlet_tab6"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-photo"></i>Fotos
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="Minimizar/Expandir" title=""></a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="panel-group accordion" id="accordion2">
                <ul class="mix-filter"></ul>

                <div class="row mix-grid">

                    {% for photo in photos %}

                        <div class="col-md-4 col-sm-4 mix category_1 mix_all"
                             style="height: 300px; width: 300px; display: block; opacity: 1">
                            <div class="mix-inner">
                                <a class="fancybox-button"
                                   href="{{ asset('bundles/backend/img/information_city_photos/' ~ photo ) }}"
                                   data-rel="fancybox-button">
                                    <img class="img-responsive" style="height: 300px; width: 300px;"
                                         src="{{ asset('bundles/backend/img/information_city_photos/' ~ photo ) }}"
                                         alt="">
                                </a>
                            </div>
                        </div>

                    {% endfor %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block pageScripts %}
    <script>
        var limpaTabs = function () {
            $('#portlet_tab1').html('');
            $('#portlet_tab2').html('');
            $('#portlet_tab3').html('');
            $('#portlet_tab4').html('');
            $('#portlet_tab5').html('');
            $('#portlet_tab6').html('');
        };

        $(function () {

            $('[href="#portlet_tab1"]').on('click', function (e) {
                limpaTabs();
                e.preventDefault();
                $.getJSON('{{ path('information_city_map') }}', {'kmlFile': 'guarulhos.kmz'}, function (data) {
                    var html = '';
                    $.each(data, function (key, val) {
                        html += val
                    });

                    $('#portlet_tab1').html(html);
                });
            });

            $('[href="#portlet_tab2"]').on('click', function (e) {
                limpaTabs();
                e.preventDefault();
                $.getJSON('{{ path('information_city_map') }}', {'kmlFile': 'distrito.kmz'}, function (data) {
                    var html = '';
                    $.each(data, function (key, val) {
                        html += val
                    });

                    $('#portlet_tab2').html(html);
                });
            });

            $('[href="#portlet_tab3"]').on('click', function (e) {
                limpaTabs();
                e.preventDefault();
                $.getJSON('{{ path('information_city_map') }}', {'kmlFile': 'setor_abastecimento.kmz'}, function (data) {
                    var html = '';
                    $.each(data, function (key, val) {
                        html += val
                    });

                    $('#portlet_tab3').html(html);
                });
            });

            $('[href="#portlet_tab4"]').on('click', function (e) {
                limpaTabs();
                e.preventDefault();
                $.getJSON('{{ path('information_city_map') }}', {'kmlFile': 'sub_bacia_esgotamento.kmz'}, function (data) {
                    var html = '';
                    $.each(data, function (key, val) {
                        html += val
                    });

                    $('#portlet_tab4').html(html);
                });
            });

            $('[href="#portlet_tab5"]').on('click', function (e) {
                limpaTabs();
                e.preventDefault();
                $.getJSON('{{ path('information_city_map') }}', {'kmlFile': 'ugr.kmz'}, function (data) {
                    var html = '';
                    $.each(data, function (key, val) {
                        html += val
                    });

                    $('#portlet_tab5').html(html);
                });
            });

            $('[href="#portlet_tab6"]').on('click', function (e) {
                limpaTabs();
                e.preventDefault();
                $.getJSON('{{ path('information_city_map') }}', {'kmlFile': 'setores_beneficiados.kmz'}, function (data) {
                    var html = '';
                    $.each(data, function (key, val) {
                        html += val
                    });

                    $('#portlet_tab6').html(html);
                });
            });

            $('[href="#portlet_tab1"]').click();
        });
    </script>

{% endblock %}